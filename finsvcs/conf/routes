# micro service based routes from Spectrum/Financial
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /today/serialNumber         controllers.Application.today
GET      /today/mmddyyyy             controllers.Application.todaySimpleFmt
GET      /today/weekday              controllers.Application.weekday
GET      /today/year                 controllers.Application.year
GET      /today/month                controllers.Application.month
GET      /today/dayOfMonth           controllers.Application.dayOfMonth
GET      /today/dayOfYear            controllers.Application.dayOfYear
GET      /today/isLeapYear           controllers.Application.isLeapYear

GET      /yearFraction               controllers.Application.yearFraction(method: Int, round: Int, dd1: Int, mm1: Int, yy1: Int, dd2: Int, mm2: Int, yy2: Int)
GET      /yearFraction/range         controllers.Application.yearFractionRange(method: Int, round: Int, dd1: String, dd2: String)

GET      /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


    